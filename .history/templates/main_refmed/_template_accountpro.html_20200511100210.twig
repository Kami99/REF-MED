<style>

.container-profile {
  max-width: 98%;
  margin: 30px auto 30px;
  padding: 0 !important;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 3px 6px rgba(0,0,0,0.10), 0 3px 6px rgba(0,0,0,0.10);
}

.info-titre{
  font-weight: 900;
}

header {
  background: #eee;
  background-image: url("https://images.pexels.com/photos/1731427/pexels-photo-1731427.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260");
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  background-color: red;
  height: 250px;
}

@media (max-width:800px) {
  header {
    height: 150px;
  } 
  
  header i {
    right: -90%;
  }
}

main {
      padding: 20px 20px 0px 20px;
}

.left {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.photo {
  width: 200px;
  height: 200px;
  margin-top: -120px;
  border-radius: 100px;
  border: 4px solid #fff;
}

.online {
  width: 20px;
  height: 20px;
  border-radius: 20px;
  position: absolute;
  right: calc(50% - 70px);
  top: 75px;
  background-color: #FFC107;
  border: 3px solid #fff;
}

@media (max-width:990px) {
  .online {
    right: calc(50% - 60px);
    top: 50px;
  } 
}

.name {
  margin-top: 20px;
  font-family: "Open Sans";
  font-weight: 600;
  font-size: 18pt;
  color: #777;
  font-variant-caps: all-petite-caps;
}

.info {
  margin-top: -5px;
  margin-bottom: 5px;
  font-family: 'Montserrat', sans-serif;
  font-size: 11pt;
  color: #aaa;
}

.stats {
  text-align: center;
  padding-bottom: 20px;
  border-bottom: 1px solid #ededed;
  font-family: 'Montserrat', sans-serif;
}


.number-stat {
  padding: 0px;
  font-size: 12pt;
  font-weight: bold;
  font-family: 'Montserrat', sans-serif;
  color: #aaa;
}

.desc-stat {
  font-size: 10pt;
  color: #bbb;
}

.desc {
  text-align: center;
  margin: 3px 0;
  color: #999;
  font-size: 13pt;
  font-family: "Open Sans";
  padding-bottom: 25px;
  border-bottom: 1px solid #ededed;
}

.social {
  margin: 5px 0 12px 0;
  text-align: center;
  display: inline-block;
  font-size: 20pt;
}

.social i {
  cursor: pointer;
  margin: 0 15px;
}

.social i:nth-child(1)  { color: #4267b2; }
.social i:nth-child(2)  { color: #1da1f2; }
.social i:nth-child(3)  { color: #bd081c; }
.social i:nth-child(4)  { color: #36465d; }

.right {
  padding: 0 25px 0 25px !important;
}


.follow {
  position: absolute;
  right: 3%;
  top: 35px;
  font-size: 11pt;
  background-color: #42b1fa;
  color: #fff;
  padding: 8px 15px;
  cursor: pointer;
  transition: all .4s;
  font-family: 'Montserrat', sans-serif;
  font-weight: 400;
}

.follow:hover {
  box-shadow: 0 0 15px rgba(0,0,0,0.2), 0 0 15px rgba(0,0,0,0.2);
}

@media (max-width:990px) {

  
  .follow {
    width: 50%;
    margin-left: 25%;
    display: block;
    position: unset;
    text-align: center;
  }
}

.tab-profiles {
  position: relative;
  background: white;
  padding: 50px;
  border-left: 1px solid #eeeeee;
}
.tab-profiles input[name="tab-profile-control"] {
  display: none;
}
.tab-profiles .content section h2,
.tab-profiles ul li label {
  font-family: "Montserrat";
  font-weight: bold;
  font-size: 18px;
  color:#42b883;
}
.tab-profiles ul {
  list-style-type: none;
  padding-left: 0;
  display: -webkit-box;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
          flex-direction: row;
  margin-bottom: 10px;
  -webkit-box-pack: justify;
          justify-content: space-between;
  -webkit-box-align: end;
          align-items: flex-end;
  flex-wrap: wrap;
}
.tab-profiles ul li {
  box-sizing: border-box;
  -webkit-box-flex: 1;
          flex: 1;
  width: 25%;
  padding: 0 10px;
  text-align: center;
}
.tab-profiles ul li label {
  -webkit-transition: all 0.3s ease-in-out;
  transition: all 0.3s ease-in-out;
  color: #929daf;
  padding: 5px auto;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
  cursor: pointer;
  -webkit-transition: all 0.2s ease-in-out;
  transition: all 0.2s ease-in-out;
  white-space: nowrap;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
.tab-profiles ul li label br {
  display: none;
}
.tab-profiles ul li label svg {
  fill: #929daf;
  height: 1.2em;
  vertical-align: bottom;
  margin-right: 0.2em;
  -webkit-transition: all 0.2s ease-in-out;
  transition: all 0.2s ease-in-out;
}
.tab-profiles ul li label:hover, .tab-profiles ul li label:focus, .tab-profiles ul li label:active {
  outline: 0;
  color: #bec5cf;
}
.tab-profiles ul li label:hover svg, .tab-profiles ul li label:focus svg, .tab-profiles ul li label:active svg {
  fill: #bec5cf;
}
.tab-profiles .slider {
  position: relative;
  width: 34%;
  -webkit-transition: all 0.33s cubic-bezier(0.38, 0.8, 0.32, 1.07);
  transition: all 0.33s cubic-bezier(0.38, 0.8, 0.32, 1.07);
}
.tab-profiles .slider .indicator {
  position: relative;
  width: 50px;
  max-width: 100%;
  margin: 0 auto;
  height: 4px;
  background: #42b883;
  border-radius: 1px;
}
.tab-profiles .content {
  margin-top: 30px;
}
.tab-profiles .content section {
  display: none;
  -webkit-animation-name: content;
          animation-name: content;
  -webkit-animation-direction: normal;
          animation-direction: normal;
  -webkit-animation-duration: 0.3s;
          animation-duration: 0.3s;
  -webkit-animation-timing-function: ease-in-out;
          animation-timing-function: ease-in-out;
  -webkit-animation-iteration-count: 1;
          animation-iteration-count: 1;
  line-height: 1.4;
}
.tab-profiles .content section h2 {
  color: #428bff;
  display: none;
}
.tab-profiles .content section h2::after {
  content: "";
  position: relative;
  display: block;
  width: 30px;
  height: 3px;
  background: #428bff;
  margin-top: 5px;
  left: 1px;
}
.tab-profiles input[name="tab-profile-control"]:nth-of-type(1):checked ~ ul > li:nth-child(1) > label {
  cursor: default;
  color: #428bff;
}
.tab-profiles input[name="tab-profile-control"]:nth-of-type(1):checked ~ ul > li:nth-child(1) > label svg {
  fill: #428bff;
}
@media (max-width: 600px) {
  .tab-profiles input[name="tab-profile-control"]:nth-of-type(1):checked ~ ul > li:nth-child(1) > label {
    background: rgba(0, 0, 0, 0.08);
  }
}
.tab-profiles input[name="tab-profile-control"]:nth-of-type(1):checked ~ .slider {
  -webkit-transform: translateX(0%);
          transform: translateX(0%);
}
.tab-profiles input[name="tab-profile-control"]:nth-of-type(1):checked ~ .content > section:nth-child(1) {
  display: block;
}
.tab-profiles input[name="tab-profile-control"]:nth-of-type(2):checked ~ ul > li:nth-child(2) > label {
  cursor: default;
  color: #428bff;
}
.tab-profiles input[name="tab-profile-control"]:nth-of-type(2):checked ~ ul > li:nth-child(2) > label svg {
  fill: #428bff;
}
@media (max-width: 600px) {
  .tab-profiles input[name="tab-profile-control"]:nth-of-type(2):checked ~ ul > li:nth-child(2) > label {
    background: rgba(0, 0, 0, 0.08);
  }
}
.tab-profiles input[name="tab-profile-control"]:nth-of-type(2):checked ~ .slider {
  -webkit-transform: translateX(100%);
          transform: translateX(100%);
}
.tab-profiles input[name="tab-profile-control"]:nth-of-type(2):checked ~ .content > section:nth-child(2) {
  display: block;
}
.tab-profiles input[name="tab-profile-control"]:nth-of-type(3):checked ~ ul > li:nth-child(3) > label {
  cursor: default;
  color: #428bff;
}
.tab-profiles input[name="tab-profile-control"]:nth-of-type(3):checked ~ ul > li:nth-child(3) > label svg {
  fill: #428bff;
}
@media (max-width: 600px) {
  .tab-profiles input[name="tab-profile-control"]:nth-of-type(3):checked ~ ul > li:nth-child(3) > label {
    background: rgba(0, 0, 0, 0.08);
  }
}
.tab-profiles input[name="tab-profile-control"]:nth-of-type(3):checked ~ .slider {
  -webkit-transform: translateX(200%);
          transform: translateX(200%);
}
.tab-profiles input[name="tab-profile-control"]:nth-of-type(3):checked ~ .content > section:nth-child(3) {
  display: block;
}


@-webkit-keyframes content {
  from {
    opacity: 0;
    -webkit-transform: translateY(5%);
            transform: translateY(5%);
  }
  to {
    opacity: 1;
    -webkit-transform: translateY(0%);
            transform: translateY(0%);
  }
}
@keyframes content {
  from {
    opacity: 0;
    -webkit-transform: translateY(5%);
            transform: translateY(5%);
  }
  to {
    opacity: 1;
    -webkit-transform: translateY(0%);
            transform: translateY(0%);
  }
}
@media (max-width: 1000px) {
  .tab-profiles ul li label {
    white-space: initial;
  }
  .tab-profiles ul li label br {
    display: initial;
  }
  .tab-profiles ul li label svg {
    height: 1.5em;
  }
}
@media (max-width: 600px) {
  .tab-profiles ul li label {
    padding: 5px;
    border-radius: 5px;
  }
  .tab-profiles ul li label span {
    display: none;
  }
  .tab-profiles .slider {
    display: none;
  }
  .tab-profiles .content {
    margin-top: 20px;
  }
  .tab-profiles .content section h2 {
    display: block;
  }
}
 
</style>

<div class="container-profile">
  <header>
  </header>
    <main>
      <div class="row">
        <div class="left col-lg-4">
          <div class="photo-left">
            {% block picture %}
            {% if doctor.pictureProfil %}             
            {% else %}
            <img class="photo" src="{{asset('bower_components/images/notImageProfile.png') }}" 
             alt="Profile image not available">
            {% endif %}
            {% endblock %}
          </div>
          <h4 class="name">{{doctor.fullName}}</h4>
          <p class="info">{{doctor.profession}}</p>
          <div class="stats row">
            <div class="stat col-xs-4">
              <p class="number-stat">{{doctor.numberPhone|replace({'-':' ' }) }} </p>
            </div>
          </div>
<span class="info-titre">Domaines d'Expertise</span>          
<p class="desc">{% for expertise in doctor.expertise %}<span class="badge badge-primary">{{expertise.expertiseName}} </span> {% endfor %}</p>
          <div class="social">
            {% for socialLinks in doctor.doctorSocialNetworks %}
            {% if socialLinks.socialNetworks.socialName|lower == "facebook" %}
           <a href="{{socialLinks}}"><i class="fa fa-facebook" aria-hidden="true"></i></a> 
            {% endif %}
            {% if socialLinks.socialNetworks.socialName|lower == "twitter" %}
           <a href="{{socialLinks}}"> <i class="fa fa-twitter" aria-hidden="true"></i></a> 
            {% endif %}
            {% if socialLinks.socialNetworks.socialName|lower == "linkedin" %}
            <a href="{{socialLinks}}"><i class="fa fa-linkedin" aria-hidden="true"></i></a> 
            {% endif %}
            {% if socialLinks.socialNetworks.socialName|lower == "google+" %}
          <a href="{{socialLinks}}">  <i class="fa fa-google" aria-hidden="true"></i></a> 
            {% endif %}
              
            {% endfor %}
 
          </div>
        </div>
        <div class="right col-lg-8">
          <div class="tab-profiles">         
            <input type="radio" id="tab-profile1" name="tab-profile-control" checked>
            <input type="radio" id="tab-profile2" name="tab-profile-control">
            <input type="radio" id="tab-profile3" name="tab-profile-control">  
            <ul>
              <li title="Presentation"><label for="tab-profile1" role="button"><i class="fas fa-book-reader"></i><br><span>Presentation</span></label></li>
              <li title="Informations"><label for="tab-profile2" role="button"><i class="fas fa-info-circle"></i><br><span>Informations</span></label></li>
              <li title="Carte"><label for="tab-profile3" role="button"><i class="fas fa-map-marked-alt"></i><br><span>Carte</span></label></li>    
            </ul>
            
            <div class="slider"><div class="indicator"></div></div>
            <div class="content">
              <section>
                {{doctor.presentation}}
              </section>
                  <section>
                     <p> <span class="info-titre">Tarifs</span> : {{doctor.fullTarif}}</p>
                    <p>  <span class="info-titre">Langue Parlées</span>: {% for langue in doctor.language %} {{langue}} {% endfor %}</p>
                    <p> <span class="info-titre">Paiement accèptés </span>: {% for means in doctor.meansPayment %} {{means}} {% endfor %}</p>
                    <p> <span class="info-titre">Moyens d'accès</span> :  {% for info in doctor.praticalInfos %} {{info}} {% endfor %}</p>
                    <p> <span class="info-titre">Remboursement(s) accèpté(s)</span> : {% for refund in doctor.refund %} {{refund}} {% endfor %}</p>
                    </section>
                  <section>
                    <div id="map"></div>
                    </section>
          </div>          
        </div>
    </main>
  </div>