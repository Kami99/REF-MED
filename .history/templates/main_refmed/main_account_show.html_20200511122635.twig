{% extends "appMain.html.twig" %}
{% block body %}
{% include "includeApp/_navigation.html.twig" %}
<div class="container-profile">
    <header style="background-image: url(bower_components/images/notImageProfile.png);">
    </header>
      <main>
        <div class="row">
          <div class="left col-lg-4">
            <div class="photo-left">
              {% block picture %}
              {% if doctor.pictureProfil %}             
              {% else %}
              <img class="photo" src="{{asset('bower_components/images/notImageProfile.png') }}" 
               alt="Profile image not available">
              {% endif %}
              {% endblock %}
            </div>
            {% block entityName %}
            <h4 class="name">{{doctor.fullName}}</h4>
            <p class="info">{{doctor.profession}}</p>
            {% endblock entityName %}
            <div class="stats row">
              <div class="stat col-xs-4">
                {% block numberPhone %}
                <p class="number-stat">{{doctor.numberPhone|replace({'-':' ' }) }} </p>  
                {% endblock numberPhone %}
              </div>
            </div>
            <div class="social">
              {% block linksSocial %}
              {% endblock %}
  
   
            </div>
          </div>
          <div class="right col-lg-8">
            <div class="tab-profiles">
              {% block input %}   
              {% endblock %}         
              <ul>
                  {% block liName %}
                  {% endblock %}
               </ul>
              
              <div class="slider"><div class="indicator"></div></div>
              <div class="content">
                  {% block content %}
                  {% endblock %}
              
            </div>          
          </div>
      </main>
    </div>
{% endblock body %}
