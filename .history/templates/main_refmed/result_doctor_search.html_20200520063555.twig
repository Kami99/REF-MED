{% extends 'appMain.html.twig' %}
{% block body %}
{% include "includeApp/_navigation.html.twig" %}
{% for label,messages in app.flashes %}
<div class="container">
    <div class="alert alert-{{label}}">
        {% for message in messages %}
        <p>{{message}}</p>                    
        {% endfor %}
{% endfor %}
 <!-- ***** Hero Area Start ***** -->
 <section class="breadcumb-area bg-img gradient-background-overlay" style="background-image: url(img/bg-img/breadcumb2.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcumb-content">
                    <h3 class="breadcumb-title">Services</h3>
                    <p>Lorem ipsum dolor sit amet, consectetuer</p>
                </div>
            </div>
        </div>
    </div>
</section>
    <!-- ***** Hero Area End ***** -->

    <div class="medilife-services-area section-padding-100-20">
        <div class="container">
            <div class="row">
                {% for doctor in doctors %}
                {% set i = 0 %}
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card-container">
                        <span class="pro">{{distance[i]}}</span>
                        {% if doctor.pictureProfil %}
                        <img class="round" src="empty.jpg"alt="user" />
                        {% else %}
                        {% endif %}
                        <h3> {{doctor.FullName}}, <h5>{{doctor.profession |u.truncate(5, '...')}}</h5></h3>
                        <h6>{{doctor.location.nameLocation}}</h6>
                        <p>  Tarif consultation Min : {{doctor.tarifMin}}
                        <br/>  Tarif consultation Max : {{doctor.tarifMax}}
                        </p>
                        <div class="buttons">
                            <button class="primary">
                                Prendre RDV
                            </button>
                            <button class="primary ghost">
                                Voir plus
                            </button>
                        </div>
                        <div class="skills">
                                
                            <h6>Expertise</h6>
                            <ul>
                                {% for expertise in doctor.expertise %}                      
                                <li>{{expertise}}</li>
                            {% endfor %}

                            </ul>
                        </div>
                    </div>
                    </div>
                {% endfor %}
                </div>

            </div>
        </div>
    </div>
{% include "includeApp/_footer.html.twig" %}

{% endblock body %}
{% block javascripts %}
<script src="{{asset('bower_components/mainRefMed/js/alert.js')}}"></script>
{{ parent() }}

{% endblock %}