{% extends 'base.html.twig' %}
{%block addStyleSheets%}
	<link href="{{asset('bower_components/js/leaflet/leaflet.css')}}" rel="stylesheet">
	<link rel="stylesheet" href="{{asset('bower_components/css/form-account-pro.css')}}">
	<link rel="stylesheet" href="{{asset('bower_components/tail/css/bootstrap4/select-default.css')}}">
{%endblock %}
{% block body %}


	<div id="booking" class="section">
		<div class="section-center">
			{{ form_start(registrationForm) }}

			<div class="container">
				<div class="row">
					<div class="booking-form">
						<h1 class="h2">Creer Votre compte REF-MED</h1>
						<div class="form-header" id="map"></div>
						<div>
							<h4>Inserez votre Position</h2>
							<blockquote>Utilisez le marqueur ou recherchez votre position avec le champ ci-dessous</blockquote>

						</div>
						<div class="row">
							<div class="col-md-4">
								<div class="form-group">
									<span class="form-label">Adresse</span>
									{{ form_widget(registrationForm.location.nameLocation, { 'attr': {'class': 'form-control locationName'}}) }}
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<span class="form-label">Latitude</span>
									{{ form_widget(registrationForm.location.latitude, { 'attr': {'class': 'form-control locationLat hidden'}}) }}
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<span class="form-label">Longitude</span>
									{{ form_widget(registrationForm.location.longitude, { 'attr': {'class': 'form-control locationLon hidden'}}) }}
								</div>
							</div>
						</div>

						<div class="row">

							<div class="col-md-4">
								<div class="form-group">
									{% if form_errors(registrationForm.email) %}
										<div class="alert alert-danger alert-dismissible fade show" role="alert">{{ form_errors(registrationForm.email) }}<button type="button" class="close" data-dismiss="alert" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
										</div>
									{% endif %}
									<span class="form-label">Email</span>
									{{ form_widget(registrationForm.email,{ 'attr': {'class': 'form-control'}}) }}
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									{% if form_errors(registrationForm.firstName) %}
										<div class="alert alert-danger alert-dismissible fade show" role="alert">{{ form_errors(registrationForm.firstName) }}<button type="button" class="close" data-dismiss="alert" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
										</div>
									{% endif %}
									<span class="form-label">Le nom de votre Pharmacie</span>
									{{ form_widget(registrationForm.pharmacyName,{ 'attr': {'class': 'form-control'}}) }}
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									{% if form_errors(registrationForm.password.first) %}
										<div class="alert alert-danger alert-dismissible fade show" role="alert">{{ form_errors(registrationForm.password.first) }}<button type="button" class="close" data-dismiss="alert" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
										</div>
									{% endif %}
									<span class="form-label">Mots de passe</span>
									{{ form_widget(registrationForm.password.first) }}
								</div>
							</div>
							<div class="col-md-6">
								<span class="form-label">Répétez le mots de passe</span>
								{{ form_widget(registrationForm.password.second) }}
							</div>
						</div>
						<div class="row">

							<div class="col-md-6">
								<div class="form-group">
									{% if form_errors(registrationForm.numberPhone) %}
										<div class="alert alert-danger alert-dismissible fade show" role="alert">{{ form_errors(registrationForm.numberPhone) }}<button type="button" class="close" data-dismiss="alert" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
										</div>
									{% endif %}
									<span class="form-label">Numero de téléphone</span>
									{{ form_widget(registrationForm.numberPhone,{ 'attr': {'class': 'form-control'}}) }}
								</div>
							</div>
							<div class="col-md-6">
								{% if form_errors(registrationForm.imageFile) %}
									<div class="alert alert-danger alert-dismissible fade show" role="alert">{{ form_errors(registrationForm.imageFile) }}<button type="button" class="close" data-dismiss="alert" aria-label="Close">
											<span aria-hidden="true">&times;</span>
										</button>
									</div>
								{% endif %}
								<div class="form-group">
									<span class="form-label">Photo de Profile</span>
									{{ form_widget(registrationForm.imageFile,{ 'attr': {'class': 'form-control'}}) }}
								</div>
							</div>
						</div>
						<p class="loginhere">
							Avez un compte
							<a href="{{path('app_login_blog')}}" class="loginhere-link">connectez vous ici</a>
						</p>
						<div class="form-btn">
							<input type="submit" name="submit" id="submit" class="submit-btn" value="S'inscrire"/>
						</div>
					</div>
				</div>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>


{% endblock body %}
{% block javascripts %}
	<script src="{{asset('bower_components/js/leaflet.js')}}"></script>
	<script src="{{asset('bower_components/js/jquery-3.2.1.min.js')}}"></script>
	<script src="{{asset('bower_components/js/popper.js')}}"></script>
	<script src="{{asset('bower_components/js/bootstrap.min.js')}}"></script>
	<script src="{{asset('bower_components/tail/js/select-full.min.js')}}"></script>
	<script src="{{asset('bower_components/js/map.js')}}"></script>
	<script src="{{asset('bower_components/js/select.js')}}"></script>

{% endblock %}
